/* pages/drawer/index.wxss */
.drawer{
    width: 100%;
    height: 100vh;
    padding: 20px 16px;
    box-sizing: border-box;
}
.con{
    box-sizing: border-box;
    text-align: center;
}
.text{
    padding: 40px 16px;
    box-sizing: border-box;
}
.button{
    width: 100%;
    height: 44px;
    background: #1989fa;
    border-radius: 2px;
    border: 1px solid #1989fa;
    font-size: 16px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    text-align: center;
    line-height: 44px;
    margin-top: 20px;
}